#!/usr/bin/env python3.5
import sys
import numpy as np
import random

def load_data():
    fo = open("IntegerArray.txt")
    data = fo.read()
    fo.close
    array = data.split('\n')
    intarray = []
    for elem in array[0:-1]:
        intarray.append(int(elem))
    return intarray

def split(xs):
    n = len(xs)
    if (n == 1):
        return xs, []
    else:
        half = round(n/2)
        half = int(half)
        A = xs[0:half]
        B = xs[half:n+1]
        return A, B

def merge(B, C):
    len_b = len(B)
    len_c = len(C)
    D = []
    i = 0
    j = 0
    for k in range(len_b + len_c):
        if (i == len_b):
            D.append(C[j])
            j = j + 1
        elif (j == len_c):
            D.append(B[i])
            i = i + 1            
        elif B[i] > C[j]:
            D.append(C[j])
            j = j + 1
        elif B[i] < C[j]:
            D.append(B[i])
            i = i + 1
    return D

def merge_count_inv(B, C):
    len_b = len(B)
    len_c = len(C)
    D = []
    i = 0
    j = 0
    num_inv = 0
    for k in range(len_b + len_c):
        if (i == len_b):
            D.append(C[j])
            j = j + 1
        elif (j == len_c):
            D.append(B[i])
            i = i + 1            
        elif B[i] > C[j]:
            D.append(C[j])
            j = j + 1
            num_inv = num_inv + (len_b - i)
        elif B[i] < C[j]:
            D.append(B[i])
            i = i + 1
    return num_inv

def sort(xs):
    if len(xs) == 0:
        return []
    elif len(xs) == 1:
        return xs
    else:
        A, B = split(xs)
        return merge(sort(A), sort(B))

def sort_and_count(A, n):
    if n == 1:
        return 0
    else:
        B, C = split(A)
        X = sort_and_count(B, len(B))
        Y = sort_and_count(C, len(C))
        Z = count_split_inv(A, n)
        return X + Y + Z

def count_split_inv(A, n):
    B,C = split(A)
    B_sorted = sort(B)
    C_sorted = sort(C)
    return merge_count_inv(B_sorted,C_sorted)
    
if __name__ == "__main__":
    sys.setrecursionlimit(1000000)
    data = load_data()
    data_small = [1,6,3,2,4,5]
    data_big = [4, 80, 70, 23, 9, 60, 68, 27, 66, 78, 12, 40, 52, 53, 44, 8, 49, 28, 18, 46, 21, 39, 51, 7, 87, 99, 69, 62, 84, 6, 79, 67, 14, 98, 83, 0, 96, 5, 82, 10, 26, 48, 3, 2, 15, 92, 11, 55, 63, 97, 43, 45, 81, 42, 95, 20, 25, 74, 24, 72, 91, 35, 86, 19, 75, 58, 71, 47, 76, 59, 64, 93, 17, 50, 56, 94, 90, 89, 32, 37, 34, 65, 1, 73, 41, 36, 57, 77, 30, 22, 13, 29, 38, 16, 88, 61, 31, 85, 33, 54]
    
    print(sort_and_count(data, len(data)))
    



